<p><%= alert %></p>

<%= form_with(url: reservations_create_path(@screening), data: {seats: @seats }) do |form| %>
  <%= form.hidden_field :date, value: @date %>
  <% (1..48).each do |key| %>
    <% p @unavailable_seats %>
    <%= form.check_box :seats, { multiple: true, disabled: @unavailable_seats.include?(key) }, key, nil %>
  <% end %>

  <div class=cinema-seats>
    <% (1..48).each do |key| %>
      <div class="box" id=<%=key%>></div>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_pack_tag 'reservation' %>
