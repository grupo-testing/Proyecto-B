<p id="notice"><%= notice %></p>

<%= form_with(url: search_movies_path) do |form| %>
  <div class="field">
    <%= form.label :date, 'Fecha', class: "new-movie-label" %>
    <%= form.date_field :date, min: Date.today, value: @date, class: "new-movie-input" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= link_to 'Show', select_screening_path(movie, date: @date) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

