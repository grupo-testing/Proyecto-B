<%= form_with url: movies_create_path do |form| %>
  <div class="row">
    <div class="col">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :img %>
        <%= form.text_field :img %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= form.label :first_day %>
        <%= form.date_field :first_day, min: Date.today %>
      </div>

      <div class="field">
        <%= form.label :last_day %>
        <%= form.date_field :last_day, min: Date.today %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h3>Matine</h3>
      <% Room::ROOMS.each do |key| %>
        <%= form.check_box :matine, { multiple: true }, key, nil %>
        <%= form.label key%>
        <br>
      <% end %>
    </div>

    <div class="col">
      <h3>Tanda</h3>
      <% Room::ROOMS.each do |key| %>
        <%= form.check_box :tanda, { multiple: true }, key, nil %>
        <%= form.label key%>
        <br>
      <% end %>
    </div>
    <div class="col">
      <h3>Noche</h3>
      <% Room::ROOMS.each do |key| %>
        <%= form.check_box :noche, { multiple: true }, key, nil %>
        <%= form.label key%>
        <br>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
